# Disney MCP Server Configuration

# Logging level (DEBUG, INFO, WARN, ERROR)
MOUSE_MCP_LOG_LEVEL=INFO

# Database path (default: ~/.cache/mouse-mcp/disney.db)
# MOUSE_MCP_DB_PATH=/custom/path/disney.db

# Session refresh buffer in minutes (default: 5)
# Refresh sessions this many minutes before they expire
MOUSE_MCP_REFRESH_BUFFER=5

# Request timeout in milliseconds (default: 30000)
MOUSE_MCP_TIMEOUT=30000

# Browser options for Playwright
# Set to "false" to show browser window (useful for debugging)
MOUSE_MCP_HEADLESS=true
